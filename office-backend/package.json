{
  "name": "office-backend",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && rm -rf .turbo && rm -f docker-metadata.json",
    "clean:deep": "npm run clean && npm run docker:clean && rm -rf node_modules && rm -rf package-lock.json",
    "start": "ts-node src/app.ts",
    "dev": "ts-node-dev --respawn ./src/app.ts",
    "build": "tsc",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "validate": "tsc --noEmit",
    "docker:build": "docker buildx build -f Dockerfile --load -t ghcr.io/infonl/zgw-office-add-in-backend:dev ..",
    "docker:clean": "docker image rm ghcr.io/infonl/zgw-office-add-in-backend:dev || echo 'Docker image not found, skipping removal'",
    "docker:security": "docker scout cves || echo 'Docker Scout not available or no image built'",
    "docker:validate": "docker buildx build --check .",
    "prettier": "prettier --check \"**/*.{ts,js}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,js}\"",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "EUPL-1.2+",
  "description": "",
  "dependencies": {
    "dotenv": "17.2.4",
    "fastify": "5.7.4",
    "jsonwebtoken": "9.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/bonjour": "3.5.13",
    "@types/connect": "3.4.38",
    "@types/jsonfile": "6.1.4",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.19.11",
    "@types/send": "1.2.1",
    "@types/serve-static": "2.2.0",
    "eslint": "10.0.0",
    "neostandard": "0.12.2",
    "prettier": "3.8.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.9.3"
  }
}
